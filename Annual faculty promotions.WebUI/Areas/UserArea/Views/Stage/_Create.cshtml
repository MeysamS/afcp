        </div>
    </div>
    <div class="form-group form-group-sm">
        @Html.LabelFor(model => model.Active, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-9">         
            @Html.TextBoxFor(model => model.Active, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(m => m.Active, "", new { @class = "text-danger" })
        </div>
    </div>
}





