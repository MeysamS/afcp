@model Annual_faculty_promotions.Core.Domain.Stage

@using (Html.BeginForm("Create", "Stage", FormMethod.Post, new { id = "frmAddStage", @class = "form-horizontal" }))
{
 <div class="form-group form-group-sm">
        @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label" })
